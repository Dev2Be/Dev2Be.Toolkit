<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Dev2Be.Toolkit.Themes">
    <DataTemplate x:Key="HeaderTemplateDescending">
        <DockPanel>
            <TextBlock Text="{Binding}" VerticalAlignment="Center" />
            <Path Fill="Black" Data="M 0 6 L 12 6 L 6 0 Z"/>
        </DockPanel>
    </DataTemplate>
    <DataTemplate x:Key="HeaderTemplateAscending">
        <DockPanel>
            <TextBlock Text="{Binding}" VerticalAlignment="Center" />
            <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>
        </DockPanel>
    </DataTemplate>
    <DataTemplate x:Key="HeaderTemplateSortDescending">
        <DockPanel>
            <TextBlock Text="{Binding}" />
            <Path StrokeThickness="1" Fill="DarkGray" Data="M 5,10 L 15,10 L 10,5" />
        </DockPanel>
    </DataTemplate>
    <DataTemplate x:Key="HeaderTemplateSortAscending">
        <DockPanel>
            <TextBlock Text="{Binding}"/>
            <Path StrokeThickness="1" Fill="DarkGray" Data="M 5,5 L 10,10 L 15,5" />
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>